<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/big"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/_bg__ikona_ek1_shape"
        android:backgroundTint="#EFEDF2"
        android:elevation="20dp"
        android:gravity="center">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:boxStrokeColor="@color/black"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Enter electricity limit"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp">

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:textSize="15sp"
                android:backgroundTint="@color/white"
                 />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/okButton1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/textInputLayout1"
            android:layout_marginTop="-55dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/darkblue"
            android:elevation="20dp"
            android:text="OK"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/okButton1"
            android:gravity="center"
            android:hint="Enter water limit"
            app:boxBackgroundColor="@color/black"
            android:layout_marginTop="10dp"

            android:layout_marginStart="20dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/okButton2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/textInputLayout2"
            android:layout_marginTop="-45dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/darkblue"
            android:layout_alignParentRight="true"
            android:elevation="20dp"
            android:text="OK"/>

        <Button
            android:id="@+id/doneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/okButton2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/darkblue"
            android:elevation="20dp"
            android:text="Done"/>
    </RelativeLayout>
</RelativeLayout>
